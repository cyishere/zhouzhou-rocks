---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---
<section class="articles">
  <h2>{title}</h2>
  <slot />
</section>

<style>
	.articles {
		max-width: var(--max-w);
		padding: 64px 0;
		margin: 0 auto;
	}

	.articles h2 {
		font-family: var(--ff-secondary);
		font-size: 2rem;
		font-weight: var(--fw-bold);
		text-align: center;
	}
</style>