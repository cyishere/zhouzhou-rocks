---
  // import { posts } from "@utils/data";
  import formatDate from "@utils/formatDate";
  import Layout from '@layouts/MainLayout.astro';
  // import PostListSection from "@components/PostListSection.astro";
  // import PostList from "@components/PostList.astro";

  const { content } = Astro.props;
  const { title, excerpt, date, cover, coverAlt } = content;

---

<Layout title={title}>
  <main>
    {cover ? (
    <img src={cover} alt={coverAlt ? coverAlt : "" } class="cover">
    ) : null}

    <section>
      <header>
        <p class="date">{formatDate(date)}</p>
        <h1>{title}</h1>
        <p class="excerpt">{excerpt}</p>
      </header>

      <article class="flow">
        <slot />

        <p>THE END.</p>
      </article>
    </section>
  </main>
</Layout>

<style>
  .cover {
    display: block;
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  section {
    --paddingX: 32px;
    padding: 0 var(--paddingX);
  }

  header,
  article {
    max-width: 800px;
    padding: 72px 0;
    margin-left: auto;
    margin-right: auto;
  }

  header {
    text-align: center;
  }

  header>*+* {
    margin-top: 10px;
  }

  h1 {
    font-size: 2.67rem;
  }

  .excerpt {
    font-size: 1.2rem;
    font-weight: var(--fw-regular);
    text-align: left;
    color: var(--clr-secondary);
  }

  header .excerpt {
    margin-top: 48px;
  }


  .full {
    --flow: 2rem;
    margin-left: calc(var(--paddingX) * -1);
    margin-right: calc(var(--paddingX) * -1);
    margin-bottom: var(--flow);
    aspect-ratio: 32 / 9;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .full img {
    width: 100%;
  }

  .more {
    background-color: var(--clr-white);
  }

  article {
    position: relative;
  }

  article::before {
    content: "";
    background: repeating-linear-gradient(-45deg, hsla(0, 0%, 100%, 0), hsla(0, 0%, 100%, 0) 6px, hsl(0, 0%, 70%) 0, hsl(0, 0%, 70%) 8px);
    width: 100%;
    height: 0.4em;
    position: absolute;
    inset: 0;
  }
</style>