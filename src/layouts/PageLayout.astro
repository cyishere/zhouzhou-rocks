---
import Layout from '@layouts/MainLayout.astro';
import pageTitle from '@utils/pageTitle';

const { content } = Astro.props;
const { title, avatar, avatarAlt } = content;
---

<Layout title={pageTitle(title)}>
	<main>
		<h2>{title}</h2>
		<article class="flow">
			{avatar ? (
			<figure>
				<img src={avatar} alt={avatarAlt || "" } />
			</figure>
			) : null}
			<slot />
		</article>
	</main>
</Layout>

<style>
	main {
		max-width: 800px;
		padding: 64px 32px;
		margin: 0 auto;
	}

	h2 {
		font-family: var(--ff-secondary);
		font-size: 2rem;
		font-weight: var(--fw-bold);
		text-align: center;
		margin-bottom: 64px;
	}

	figure img {
		width: 100%;
		max-width: 360px;
		margin-left: auto;
		margin-right: auto;
	}
</style>