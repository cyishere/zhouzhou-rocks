---
import Navbar from "@components/Navbar.astro";
---

<header>
  <a href="/" class="logo">
    <img src="/assets/logo-accent.png" alt="">
    <span>Zhou Zhou</span>
  </a>
  <Navbar />
</header>

<style>
  header {
    --spacing: 32px;
    background-color: var(--clr-white);
    padding: var(--spacing);
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .logo {
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  img {
    display: inline-block;
  }

  span {
    font-size: 2rem;
    font-family: var(--ff-logo);
    color: var(--clr-secondary);
  }

  @media (max-width: 1200px) {
    .logo img {
      width: 60px;
    }

    .logo span {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 960px) {
    header {
      flex-direction: column;
      align-items: stretch;
      gap: var(--spacing);
    }
  }
</style>