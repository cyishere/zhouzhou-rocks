---
import "@styles/global.css";
import Seo from '@components/Seo.astro';
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<Seo />
	<title>{title}</title>
</head>
<body>
	<Header />
	<slot />
  <Footer />
</body>
</html>
